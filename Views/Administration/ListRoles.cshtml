@model  IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>

<!--Check to see if there is atleast one row to display-->

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Administration">
        Add new role
    </a>
    //Loop through IdentityRole Object
    foreach(var role in Model)
    {
<div class="card mb-3">
    <div class="card-header">
        Role Id: @role.Id
    </div>
    <div class="card-body">
        <h5 class="card-title">@role.Name</h5>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration"
           asp-route-id="@role.Id">Edit</a>
        <a class="btn btn-danger" asp-action="DeleteRole" asp-controller="Administration"
           asp-route-id="@role.Id">Delete</a>
    </div>
</div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-body">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}

