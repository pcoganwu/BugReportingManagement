@model BugReportingManagement.ViewModels.DeleteRoleViewModel
@{
    ViewData["Title"] = "Delete Role";
}

<h4 class="text-danger" style="font-weight:bold">Are you sure you want to delete role @Html.DisplayFor(model => model.RoleName)?</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
    </dl>
    <form method="post">
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>
