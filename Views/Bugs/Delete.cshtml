@model BugReportingManagement.Models.Bugs

@{
    ViewData["Title"] = "Delete";
}

<h4 class="text-danger" style="font-weight:bold">Are you sure you want to delete this bug report?</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BugCreatedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BugCreatedBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BugCreatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BugCreatedOn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BugClosedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BugClosedBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BugClosedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BugClosedOn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BugResolutionSummary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BugResolutionSummary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Attachment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Attachment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BugPriority)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BugPriority.BugPriorityType)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BugStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BugStatus.BugStatusType)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Project)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Cancel</a>
    </form>
</div>
